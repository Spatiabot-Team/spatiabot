{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "strict": false,
    "types": ["vuetify","node"],
    "typeRoots": [
      "./@types",
      "node_modules/@types"
    ],
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/api/**/*",
    "src/index.ts",
    "src/load-fixtures.ts",
    "config.ts"
  ]
}
